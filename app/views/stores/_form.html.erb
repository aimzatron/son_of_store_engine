<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:
      </h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="field">
    <%= f.label "Store Name:" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <p>Your store path will show up as example.com/path</p>
    <%= f.label "Store path:" %><br />
    <%= f.text_field :path %>
  </div>
  <div class="field">
    <%= f.label "Store Description:" %><br />
    <%= f.text_field :description %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
