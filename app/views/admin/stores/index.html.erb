<h1>Listing stores</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Path</th>
    <th>Status</th>
    <th>Description</th>
    <th></th>
    <th></th>
    
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= store.name %></td>
    <td><%= store.path %></td>
    <td><%= store.status %></td>
    <td><%= store.description.to_s[0..31] %></td>
    <td>
      <%= link_to 'Approve', change_status_on_admin_store_path(:id => store.id, :status => 'live'), :class => 'btn btn-mini', :method => "put" if store.status == "pending" %>
      <%= link_to 'Decline', change_status_on_admin_store_path(:id => store.id, :status => 'declined'), :class => 'btn btn-mini', :method => "put" if store.status == "pending" %>
      <%= link_to 'Disable', change_status_on_admin_store_path(:id => store.id, :status => 'disabled'), :class => 'btn btn-mini', :method => "put" if store.status == "live" %>
      <%= link_to 'Enable', change_status_on_admin_store_path(:id => store.id, :status => 'live'), :class => 'btn btn-mini', :method => "put" if store.status == "disabled" %>
      
    </td>
    <td>
      <%= link_to "Administer", store_index_path(store.path),:class => "btn btn-mini" if store.status == "live" %>
    </td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Store', new_store_path %>
