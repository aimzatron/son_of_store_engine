<div class="well well-large">
  <h1 style= "font-family:Arial; font-size:30px">Login to your store!</h1>
  <p style= "font-family:Arial; font-size:18px">Not signed up? Register <%= link_to "here", new_user_path %></p>
  <%= form_tag session_path(redirect: @redirect) do %>
    <div class="field" style= "font-family:Arial; font-size:16px">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field" style= "font-family:Arial; font-size:16px">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="field" style= "font-family:Arial; font-size:16px">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %><%= label_tag :remember_me %>
    </div>
    <div class="actions" style= "font-family:Arial; font-size:16px"><%= submit_tag "Log in", :class => "btn btn-success" %></div>
  <% end %>
</div>
 
